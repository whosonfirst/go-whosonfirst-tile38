CWD=$(shell pwd)
GOPATH := $(CWD)

prep:
	if test -d pkg; then rm -rf pkg; fi

rmdeps:
	if test -d src; then rm -rf src; fi 

build:	rmdeps deps fmt bin

self:   prep
	if test -d src/github.com/whosonfirst/go-whosonfirst-placetypes; then rm -rf src/github.com/whosonfirst/go-whosonfirst-placetypes; fi
	mkdir -p src/github.com/whosonfirst/go-whosonfirst-placetypes
	cp *.go src/github.com/whosonfirst/go-whosonfirst-placetypes/
	cp -r spec src/github.com/whosonfirst/go-whosonfirst-placetypes/spec/

deps:   self

fmt:
	go fmt *.go

placetypes:
	mv spec/spec.go spec/spec.go.bak
	touch spec/spec.go
	echo "package placetypes\n" >> spec/spec.go
	echo -n "// this package was generated by robots on " >> spec/spec.go
	echo `date` >> spec/spec.go
	echo "// https://raw.githubusercontent.com/whosonfirst/whosonfirst-placetypes/master/data/placetypes-spec-latest.json\n" >> spec/spec.go
	echo "func Spec() string {\n" >> spec/spec.go
	echo -n "return \`" >> spec/spec.go
	curl -s https://raw.githubusercontent.com/whosonfirst/whosonfirst-placetypes/master/data/placetypes-spec-latest.json | tr -d '\n' >> spec/spec.go
	echo "\`\n}" >> spec/spec.go
	go fmt spec/spec.go

# @GOPATH=$(shell pwd) go get -u ""
